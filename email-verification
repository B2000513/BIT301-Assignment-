<?php
// Include database connection
include 'db.php';

ini_set('display_errors', 1);
ini_set('display_startup_errors', 1);
error_reporting(E_ALL);

use PHPMailer\PHPMailer\PHPMailer;
use PHPMailer\PHPMailer\SMTP;
use PHPMailer\PHPMailer\Exception;

require 'Mail/vendor/autoload.php';

// Initialize variables
$email = isset($_GET['email']) ? htmlspecialchars($_GET['email']) : '';
$message = '';

// Handle form submissions
if ($_SERVER['REQUEST_METHOD'] === 'POST') {
    if (isset($_POST["verify_email"])) {
        verifyEmail($conn);
    } elseif (isset($_POST["resend_code"])) {
        sendVerificationCode($email);
    }
}

// Function to verify email
function verifyEmail($conn) {
    global $email, $message;

    $email = $_POST["email"];
    $verification_code = $_POST["verification_code"];

    // Prepare the SQL statement to prevent SQL injection
    $stmt = $conn->prepare("UPDATE users SET email_verified_at = NOW() WHERE email = ? AND verification_code = ?");
    $stmt->bind_param("ss", $email, $verification_code);
    $stmt->execute();

    if ($stmt->affected_rows == 0) {
        $message = "Verification code failed. Please try again.";
    } else {
        // Successful verification
        header("Location: LoginNRegister.php"); // Redirect to login page
        exit();
    }

    // Close the statement
    $stmt->close();
}

// Function to send verification code
function sendVerificationCode($email) {
    global $conn, $message;

    // Generate a new verification code
    $new_code = substr(number_format(time() * rand(), 0, '', ''), 0, 6);

    saveVerificationCode($email, $new_code); // Save the new code

    // Setup PHPMailer to send email
    $mail = new PHPMailer(true);

    try {
        $mail->SMTPDebug = 0;
        $mail->isSMTP();
        $mail->Host = 'smtp.gmail.com';
        $mail->SMTPAuth = true;
        $mail->Username = 'xwkhor0713@gmail.com';
        $mail->Password = 'wfzg mztw sfda cqhs';
        $mail->SMTPSecure = PHPMailer::ENCRYPTION_STARTTLS;
        $mail->Port = 587;

        $mail->setFrom('xwkhor0713@gmail.com', 'www.cwms.com');
        $mail->addAddress($email);
        $mail->isHTML(true);

        // Prepare email content
        $mail->Subject = 'Email verification';
        $mail->Body = '<p>Your new verification code for CWMS is: <b>' . $new_code . '</b></p>';

        // Send the email
        $mail->send();

        $message = "A new verification code has been sent to your email.";
    } catch (Exception $e) {
        $message = "Message could not be sent. Mailer Error: {$mail->ErrorInfo}";
    }
}

// Function to save verification code to the database
function saveVerificationCode($email, $code) {
    global $conn;
    $stmt = $conn->prepare("UPDATE users SET verification_code = ? WHERE email = ?");
    $stmt->bind_param("ss", $code, $email);
    $stmt->execute();

    // Close the statement
    $stmt->close();
}

?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Email Verification</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="container mt-5">
        <h1>Email Verification</h1>
        <p>Please enter the verification code sent to your email:</p>

        <form method="POST">
            <input type="hidden" name="email" value="<?php echo $email; ?>" required>
            <div class="mb-3">
                <label for="verification_code" class="form-label">Enter Verification Code</label>
                <input type="text" class="form-control" name="verification_code" placeholder="Enter verification code" required>
            </div>
            <button type="submit" name="verify_email" class="btn btn-submit w-100">Verify Email</button>
        </form>

        <?php if ($message): ?>
            <div class="alert <?php echo (strpos($message, 'failed') !== false) ? 'alert-danger' : 'alert-success'; ?> mt-3"><?php echo $message; ?></div>
        <?php endif; ?>

        <?php if (strpos($message, 'failed') !== false): ?>
            <div class="mt-3">
                <p>If you want to receive a new verification code, please click the button below:</p>
                <form method="POST">
                    <input type="hidden" name="email" value="<?php echo $email; ?>">
                    <button type="submit" name="resend_code" class="btn btn-secondary w-100">Resend Verification Code</button>
                </form>
            </div>
        <?php endif; ?>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
